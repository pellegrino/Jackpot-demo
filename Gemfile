source 'https://rubygems.org'

gem 'rails'  , '3.2.2'
gem 'jackpot', git: "git://github.com/pellegrino/jackpot.git"
gem 'pg'


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'therubyracer'

  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

# Use unicorn as the web server
gem 'unicorn'
gem 'heroku'
